<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_dog_image"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:src="@drawable/img_beagle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강아지 이름"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tv_dog_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dog_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강아지 사이즈"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dog_name" />

</androidx.constraintlayout.widget.ConstraintLayout>